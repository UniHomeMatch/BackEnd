generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  name      String
  cpf       String     @unique
  birthdate DateTime
  generoId  Int
  email     String     @unique
  password  String
  genero    Genero     @relation(fields: [generoId], references: [id_genero])
  Imobi     Imobi[]
  Mensagem  Mensagem[]

  @@map("users")
}

model Imobi {
  id          Int      @id @default(autoincrement())
  userId      Int
  thumb       String?
  title       String?
  description String?  @db.VarChar(255)
  price       String?
  location    String?
  area        String?
  bedrooms    String?
  bathrooms   String?
  name        String?
  phone       String?
  email       String?
  slug        String?
  created_at  DateTime @default(now())
  author      User     @relation(fields: [userId], references: [id])

  @@map("imoveis")
}

model Genero {
  id_genero Int    @id @default(autoincrement())
  genero    String
  User      User[]

  @@map("genero")
}

model Mensagem {
  id              Int    @id @default(autoincrement())
  client_name     String
  client_email    String
  client_messagem String
  client_telefone String
  userId          Int
  author          User   @relation(fields: [userId], references: [id])

  @@map("mensagem")
}
